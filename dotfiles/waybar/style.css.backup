@import url("./colors.css");

* {
    font-size:15px;
    font-family: "CodeNewRoman Nerd Font Propo";
}

window#waybar{
  all:unset;
}

.modules-left {
  padding:7px;
  margin:10px 0px 5px 10px;
  border-radius:10px;
  background: alpha(@background,.6);
  box-shadow: 0px 0px 2px rgba(0, 0, 0, .6);
}

.modules-center {
  padding:7px;
  margin:10px 0px 5px 10px;
  border-radius:10px;
  background: alpha(@background,.6);
  box-shadow: 0px 0px 2px rgba(0, 0, 0, .6);
}

.modules-right {
  padding:7px;
  margin: 10px 10px 5px 0px;
  border-radius:10px;
  background: alpha(@background,.6);
  box-shadow: 0px 0px 2px rgba(0, 0, 0, .6);
}

.tooltip {
  background:@background;
  color: @color0;
}

#clock:hover, #cpu:hover{
  transition: all .3s ease;
  color: @color4;
}

#custom-notification {
    padding: 0px 5px;
    transition: all .3s ease;
    color:@color7;
}

#clock{
  padding: 0px 5px;
  color:@color6;
  transition: all .3s ease;
}

#clock:hover{
  color:@color4;
}

#idle_inhibitor {
  padding: 0px 5px;
  color:@color5;
  transition: all .3s ease;
}

#idle_inhibitor:hover {
  color:@color4;
}

#idle_inhibitor.activated {
  color:@color2;
  border: none;
}

#idle_inhibitor.activated:hover {
  color:@color4;
  border: none;
}

#workspaces{
  padding: 0px 5px;
}

#workspaces button {
  all:unset;
  padding: 0px 5px;
  color: alpha(@color5,.4);
  transition: all .2s ease;
}

#workspaces button:hover {
  color:@second-background;
  border: none;
  text-shadow: 0px 0px 1.5px rgba(0, 0, 0, .5);
  transition: all 1s ease;
}

#workspaces button.active {
  color:@color6;
  border: none;
  text-shadow: 0px 0px 2px rgba(0, 0, 0, .5);
}

#workspaces button.empty {
  color: @second-background;
  border: none;
  text-shadow: 0px 0px 1.5px rgba(0, 0, 0, .2);
}

#workspaces button.empty:hover {
  color: @second-background;
  border: none;
  text-shadow: 0px 0px 1.5px rgba(0, 0, 0, .5);
  transition: all 1s ease;
}

#workspaces button.empty.active {
  color:@color6;
  border: none;
  text-shadow: 0px 0px 2px rgba(0, 0, 0, .5);
}

#bluetooth{
  padding: 0px 5px;
  transition: all .3s ease;
  color:@color1;
}

#network{
  padding: 0px 5px;
  transition: all .3s ease;
  color:@color6;
}

#network:hover {
  color:@color4;
}

#tray{
    padding: 0px 5px;
    transition: all .3s ease; 

}
#tray menu * {
    padding: 0px 5px;
    transition: all .3s ease; 
}

#tray menu separator {
    padding: 0px 5px;
    transition: all .3s ease; 
}

#bluetooth.on,
#bluetooth.connected {
  padding: 0px 5px;
  transition: all .3s ease;
  color: @color2;
}

#bluetooth.off,
#bluetooth.disabled {
  padding: 0px 5px;
  transition: all .3s ease;
  color: @color0;
}

#bluetooth.on:hover,
#bluetooth.off:hover,
#bluetooth.connected:hover,
#bluetooth.disabled:hover {
  color:@color4;
}

#cpu {
  padding: 0px 5px;
  transition: all .3s ease;
  color:@color3;
}

#memory {
  padding: 0px 5px;
  transition: all .3s ease;
  color:@color7;
}

#memory:hover {
  color:@color4;
}

#custom-gpu {
  padding: 0px 5px;
  transition: all .3s ease;
  color:@color4;
}

#custom-gpu:hover {
  color:@color4;
}

#wireplumber {
  padding: 0px 5px;
  transition: all .3s ease;
  color:@color1;
}

#wireplumber:hover {
  color:@color4;
}

#wireplumber.muted {
  border: none;
  color:@color0;
}

#wireplumber.muted:hover {
  color:@color4;
}

#mpris {
  padding: 0px 5px;
  transition: all .3s ease;
  color:@color7;
}

#mpris:hover {
  color:@color4;
}

#custom-cava {
  padding: 0px 5px;
  transition: all .3s ease;
  color:@color3;
}

#custom-cava:hover {
  color:@color4;
}

#custom-power {
  padding: 0px 5px;
  transition: all .3s ease;
  color:@color5;
}

#custom-power:hover {
  color:@color0;
}

/* OS colors */

